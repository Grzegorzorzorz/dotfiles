set nu rnu
"set cursorline
set cc=81

" Determine tab behaviour
set autoindent
set tabstop=4
set shiftwidth=4

set mouse=a

set wildmode=longest,list

" Disable line wrapping
set nowrap

" Disable swap files
set noswapfile

" Set make split direction for sp vsp
set splitbelow splitright

set laststatus=3
